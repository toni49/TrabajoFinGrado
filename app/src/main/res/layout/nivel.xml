<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_espacial"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel x"
        android:textSize="120dp"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="110dp"
        android:id="@+id/texto1" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="600dp"
        android:background="@android:color/holo_orange_light"
        android:text="Salir"
        android:textSize="25dp"
        android:id="@+id/button_exit"
        android:textColor="@color/primary_dark_material_dark"
        android:foregroundTint="@color/abc_input_method_navigation_guard" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="1000dp"
        android:background="@android:color/holo_orange_light"
        android:text="Siguiente Nivel"
        android:textSize="25dp"
        android:id="@+id/button_next"
        android:layout_gravity="right"
        android:textColor="@color/primary_dark_material_dark"
        android:backgroundTintMode="add" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_marginLeft="500dp"
        android:layout_below="@+id/texto1"
        android:layout_alignLeft="@+id/texto1"
        android:layout_alignStart="@+id/texto1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:textSize="36dp"
        android:textColor="@android:color/holo_orange_light"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="num"
        android:id="@+id/text_fallos"
        android:layout_below="@+id/imageView4"
        android:layout_toRightOf="@+id/button_exit"
        android:layout_toEndOf="@+id/button_exit" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="240dp"
        android:id="@+id/imageStar1"
        android:src="@drawable/black_star"
        android:layout_alignBottom="@+id/button_exit"
        android:layout_alignRight="@+id/texto1"
        android:layout_alignEnd="@+id/texto1" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="120dp"
        android:id="@+id/imageStar2"
        android:src="@drawable/black_star"
        android:layout_alignBottom="@+id/button_exit"
        android:layout_alignRight="@+id/texto1"
        android:layout_alignEnd="@+id/texto1" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="0dp"
        android:id="@+id/imageStar3"
        android:src="@drawable/black_star"
        android:layout_alignBottom="@+id/button_exit"
        android:layout_alignRight="@+id/texto1"
        android:layout_alignEnd="@+id/texto1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageStars"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>