<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_espacial"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Niveles"
        android:textSize="92dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_orange_light" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="1050dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/flecha_right"
        android:id="@+id/imageRight"
        android:background="@android:color/holo_orange_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/rejuego1"
        android:id="@+id/imageButton"
        android:background="#1e3449" />

        <ImageButton
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/rejuego2"
        android:id="@+id/imageButton2"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/rejuego3"
        android:id="@+id/imageButton3"
        android:layout_gravity="right" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/rejuego4"
            android:id="@+id/imageButton4" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/rejuego5"
            android:id="@+id/imageButton5"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/rejuego6"
            android:id="@+id/imageButton6"
            android:layout_gravity="right" />


    </LinearLayout>




</LinearLayout>